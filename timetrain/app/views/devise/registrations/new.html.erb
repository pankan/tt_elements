<div class="page-container">
  <h1><%= image_tag("logo_white.png", class: "logo") %></h1>


     <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div><% f.label :username %>
    <%= f.text_field :username, placeholder: "Username", autofocus: true %></div>

    <div><% f.label :email %>
    <%= f.email_field :email, placeholder: "Email", autofocus: true %></div>

    <div><% f.label :password %>
      <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %></div>

    <div><% f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, placeholder: "Re-type Password", autocomplete: "off" %></div>
  <button>Next<% f.submit "Sign up" %></button>
  <% end %>



  <div class="signup">

    <%= render "devise/shared/links" %>
  </div>
</div>