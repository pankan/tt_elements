<div class="widgets">
  <% current_member.twitter_models.each do |post| %>
  <div id="<%= post.id %>">
    <blockquote class="twitter-tweet" width="350"><a href="<%= post.urls %>"></a></blockquote>
  </div>
  <% end %>

  <% current_member.google_models.each do |post| %>
  <div id="<%= post.id %>">
    <div class="g-post" data-href="<%= post.urls %>"></div>
  </div>
  <% end %>
</div>
