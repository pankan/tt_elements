<h2>Resend confirmation instructions</h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div><% f.label :email %><br />
  <%= f.email_field :email, autofocus: true, placeholder: "Enter email address" %></div>

  <button><% f.submit "Resend confirmation instructions" %></button>
<% end %>

<div class="signup">
	<%= link_to "Click here to Sign in", new_member_session_path, method: :get %>
</div>
